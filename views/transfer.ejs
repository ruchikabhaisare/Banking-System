<%- include('header') -%>

<div style="background-color:#7868e6">
  <form class="trans_main" action="/transfer/<%=item._id%>" method="post">
  <div class="card">
    <h1 class="card-header"><%=item.name%></h1>
    <h2>Current Balance    <span id="balance" style="border-width:10px;background-color:#eeebdd; border-radius:2px;"><%=item.balance%></span></h2>
    <div class="card-body">
      <input class="form-control form-control-lg" type="text" placeholder="Amount" name="amount">
      <h5 class="card-title" style="margin-top:10px;">Tansfer to</h5>
        <select name="to" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="tran_input">
          <% customers.forEach(function(cust){%>
          <% if(cust.email!=item.email){ %>
          <option value="<%=cust._id%>"><%=cust.name%></option>
          <%}})%>
        </select>
      <button onclick="myFunction()" type="submit" name="button" class="btn btn-primary btn-lg">Transfer</button>
    </div>
  </div>
  </form>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
